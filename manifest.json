{
  "manifest_version": 3,
  "name": "Chrome Music Identifier",
  "version": "1.0",
  "description": "Identifie la musique jou√©e dans l'onglet actif",
  "permissions": [
    "activeTab",
    "tabCapture",
    "storage",
    "https://api.audd.io/"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }]
} 