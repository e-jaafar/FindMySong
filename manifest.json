{
  "manifest_version": 3,
  "minimum_chrome_version": "105",
  "name": "Find My Song",
  "version": "1.0.2",
  "description": "Identifie la musique en temps r√©el dans votre navigateur",
  "permissions": [
    "activeTab",
    "tabCapture",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://api.audd.io/",
    "https://www.googleapis.com/"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }],
  "options_page": "options.html"
} 